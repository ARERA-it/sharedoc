<!DOCTYPE html>
<html>
  <head>
    <title>Shardocs</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body role="document" data-controller="<%= controller_name %>" data-action="<%= action_name %>">

    <div id="wrapper">
      <!-- Navigation -->
      <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <div class="logo-frame">
            <div class="logo-helper">
              <%= link_to "Shardocs", "#" %>
            </div>
          </div>
        </div>


        <!-- /.navbar-header -->
        <ul class="nav navbar-top-links navbar-right">

          <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                  <i class="fas fa-user fa-fw"></i> <i class="fas fa-caret-down"></i>
              </a>
          </li>
        </ul>


          <div class="navbar-default sidebar" role="navigation">
            <div class="sidebar-nav navbar-collapse">
              <ul class="nav" id="side-menu">
                <li>
                  <%= link_to pages_path do %>
                    Lista dei documenti
                  <% end %>
                </li>
                <li>
                  <%= link_to specific_objectives_path do %>
                    Obiettivi specifici
                  <% end %>
                </li>
              </ul>
            </div>
            <!-- /.sidebar-collapse -->
          </div>
          <!-- /.navbar-static-side -->
      </nav>


      <div id="page-wrapper">
        <div class="noticex-wrapper">
          <%= flash_alert %>
        </div>
        <%= yield %>
        <div class="foot-space">&nbsp;</div>
      </div>
    </div>
  </body>
</html>
