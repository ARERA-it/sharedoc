<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Lista Obiettivi specifici</h1>
  </div>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @specific_objectives.each do |so| %>
      <tr>
        <td><%= so.name %></td>
        <td><%= so.comments %></td>
        <td><%= link_to 'Show', so, class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Edit', edit_specific_objective_path(so), class: "btn btn-default btn-sm" %></td>
        <td><%= link_to 'Destroy', so, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuovo O.S.', new_specific_objective_path, class: "btn btn-default" %>
